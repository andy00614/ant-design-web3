{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,

    "declaration": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@@/*": [".dumi/tmp/*"],
      "@levellink/web3": ["./packages/web3/src/index.ts"],
      "@levellink/web3-common": ["./packages/common/src/index.ts"],
      "@levellink/web3-icons": ["./packages/icons/src/index.ts"],
      "@levellink/web3-assets": ["./packages/assets/src/index.ts"],
      "@levellink/web3-wagmi": ["./packages/wagmi/src/index.ts"],
      "@levellink/web3-ethereum": ["./packages/ethereum/src/index.ts"]
    }
  }
}
